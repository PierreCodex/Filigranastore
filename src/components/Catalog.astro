---
// Datos de las categorías de productos de filigrana
const categories = [
  {
    id: 1,
    name: "Joyería Femenina",
    description: "Aretes, collares, pulseras y anillos en filigrana de plata",
    image: "/AretesGuia.png",
    items: ["Aretes", "Collares", "Pulseras", "Anillos"],
    featured: true
  },
  {
    id: 2,
    name: "Figuras Escultóricas",
    description: "Animales y figuras decorativas en técnica de filigrana",
    image: "/Pavo.jpg",
    items: ["Pavos", "Caballos", "Toros", "Figuras Religiosas"],
    featured: true
  },
  {
    id: 3,
    name: "Prendedores",
    description: "Broches y prendedores con motivos tradicionales",
    image: "/PrendedorColibri.jpg",
    items: ["Colibríes", "Flores", "Mariposas", "Motivos Geométricos"],
    featured: false
  },
  {
    id: 4,
    name: "Joyería Masculina",
    description: "Cadenas, pulseras y gemelos para caballeros",
    image: "/mono.png",
    items: ["Cadenas", "Pulseras", "Gemelos", "Anillos"],
    featured: false
  },
  {
    id: 5,
    name: "Objetos Decorativos",
    description: "Piezas ornamentales y utilitarias en filigrana",
    image: "/Deflin.jpg",
    items: ["Jarrones", "Marcos", "Candelabros", "Cofres"],
    featured: false
  },
  {
    id: 6,
    name: "Artículos Religiosos",
    description: "Cruces, medallas y objetos de devoción",
    image: "/Se.png",
    items: ["Cruces", "Medallas", "Rosarios", "Santos"],
    featured: false
  }
];
---

<section id="Catalog" class="w-full bg-cream py-16 md:py-24">
  <div class="w-[85vw] max-md:w-[90%] m-auto">
    <!-- Encabezado del catálogo -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-gold text-2xl md:text-3xl font-semibold mb-4">Catálogo de Productos</h2>
      <h1 class="text-charcoal text-4xl md:text-6xl font-bold mb-6">FILIGRANA DE CATACAOS</h1>
      <p class="text-warm-gray-dark text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
        Descubre nuestra colección de piezas únicas elaboradas con la tradicional técnica de filigrana, 
        declarada Patrimonio Cultural de la Nación. Cada pieza refleja la maestría y tradición de nuestros artesanos.
      </p>
    </div>

    <!-- Categorías destacadas -->
    <div class="mb-16">
      <h3 class="text-charcoal text-2xl md:text-3xl font-bold text-center mb-8">Categorías Destacadas</h3>
      <div class="grid md:grid-cols-2 gap-8 md:gap-12">
        {categories.filter(cat => cat.featured).map(category => (
          <div class="bg-ivory bg-opacity-95 border-2 border-gold rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl transition-all duration-300 hover:scale-105">
            <div class="aspect-video overflow-hidden">
              <img 
                src={category.image} 
                alt={category.name}
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="p-6 md:p-8">
              <h4 class="text-charcoal text-xl md:text-2xl font-bold mb-3">{category.name}</h4>
              <p class="text-warm-gray-dark text-base md:text-lg mb-4 leading-relaxed">{category.description}</p>
              <div class="flex flex-wrap gap-2 mb-6">
                {category.items.map(item => (
                  <span class="bg-cream text-gold px-3 py-1 rounded-full text-sm font-medium border border-gold">
                    {item}
                  </span>
                ))}
              </div>
              <button class="w-full bg-gold hover:bg-bronze text-charcoal font-semibold py-3 px-6 rounded-xl shadow-lg transition-all duration-200 hover:shadow-xl">
                Ver Productos
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Todas las categorías -->
    <div>
      <h3 class="text-charcoal text-2xl md:text-3xl font-bold text-center mb-8">Todas las Categorías</h3>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {categories.map(category => (
          <div class="bg-ivory bg-opacity-90 border border-warm-gray-light rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:border-gold">
            <div class="aspect-square overflow-hidden">
              <img 
                src={category.image} 
                alt={category.name}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-4 md:p-6">
              <h4 class="text-charcoal text-lg md:text-xl font-bold mb-2">{category.name}</h4>
              <p class="text-warm-gray-dark text-sm md:text-base mb-3 leading-relaxed">{category.description}</p>
              <div class="flex flex-wrap gap-1 mb-4">
                {category.items.slice(0, 2).map(item => (
                  <span class="bg-cream text-gold px-2 py-1 rounded-full text-xs font-medium">
                    {item}
                  </span>
                ))}
                {category.items.length > 2 && (
                  <span class="text-warm-gray-dark text-xs px-2 py-1">
                    +{category.items.length - 2} más
                  </span>
                )}
              </div>
              <button class="w-full bg-cream hover:bg-ivory text-charcoal font-medium py-2 px-4 rounded-lg border border-gold hover:border-bronze transition-all duration-200">
                Explorar
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Llamada a la acción -->
    <div class="text-center mt-16 md:mt-20">
      <div class="bg-charcoal bg-opacity-95 rounded-2xl p-8 md:p-12 border-2 border-gold shadow-2xl">
        <h3 class="text-gold text-2xl md:text-3xl font-bold mb-4">¿Buscas algo específico?</h3>
        <p class="text-ivory text-lg md:text-xl mb-6 max-w-2xl mx-auto">
          Contáctanos para piezas personalizadas o consultas sobre nuestros productos. 
          Cada pieza es única y elaborada con técnicas tradicionales.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-gold hover:bg-bronze text-charcoal font-semibold py-3 px-8 rounded-xl shadow-lg transition-all duration-200 hover:shadow-xl">
            Contactar Artesano
          </button>
          <button class="bg-transparent border-2 border-gold text-gold hover:bg-gold hover:text-charcoal font-semibold py-3 px-8 rounded-xl transition-all duration-200">
            Ver Catálogo Completo
          </button>
        </div>
      </div>
    </div>
  </div>
</section>