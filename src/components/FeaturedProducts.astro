---
// Productos destacados para mostrar en la página inicial
const featuredProducts = [
  {
    id: 1,
    name: "Aretes de Filigrana Clásicos",
    category: "Joyería Femenina",
    price: "S/ 120.00",
    image: "/AretesGuia.png",
    description: "Elegantes aretes elaborados con técnica tradicional de filigrana en plata 950.",
    whatsappMessage: "Hola, me interesa el producto: Aretes de Filigrana Clásicos - S/ 120.00"
  },
  {
    id: 3,
    name: "Pavo Real en Filigrana",
    category: "Figuras Escultóricas",
    price: "S/ 450.00",
    image: "/Pavo.jpg",
    description: "Majestuosa figura de pavo real elaborada completamente en filigrana de plata.",
    whatsappMessage: "Hola, me interesa el producto: Pavo Real en Filigrana - S/ 450.00"
  },
  {
    id: 5,
    name: "Prendedor Colibrí",
    category: "Prendedores",
    price: "S/ 95.00",
    image: "/PrendedorColibri.jpg",
    description: "Hermoso prendedor con forma de colibrí, símbolo de libertad y belleza.",
    whatsappMessage: "Hola, me interesa el producto: Prendedor Colibrí - S/ 95.00"
  },
  {
    id: 7,
    name: "Delfín Decorativo",
    category: "Objetos Decorativos",
    price: "S/ 320.00",
    image: "/Deflin.jpg",
    description: "Figura decorativa de delfín en filigrana, perfecta para decorar espacios elegantes.",
    whatsappMessage: "Hola, me interesa el producto: Delfín Decorativo - S/ 320.00"
  }
];

const whatsappNumber = "51987654321"; // Número de WhatsApp del artesano
---

<section class="w-[90vw] max-w-[1400px] mx-auto py-16">
  <!-- Encabezado de la sección -->
  <div class="text-center mb-12">
    <h2 class="text-charcoal text-3xl md:text-5xl font-bold mb-4">PRODUCTOS DESTACADOS</h2>
    <h3 class="text-gold text-xl md:text-2xl font-semibold mb-6">Lo Mejor de Nuestra Colección</h3>
    <p class="text-warm-gray-dark text-lg max-w-3xl mx-auto leading-relaxed mb-8">
      Descubre nuestras piezas más populares, cada una elaborada con la técnica tradicional de filigrana 
      que ha sido perfeccionada por generaciones de artesanos en Catacaos.
    </p>
    
    <!-- Botón para ver catálogo completo -->
    <a 
      href="/marketplace" 
      class="group inline-flex items-center gap-3 bg-gradient-to-r from-gold to-bronze hover:from-bronze hover:to-gold text-charcoal font-bold px-8 py-4 rounded-full shadow-xl transition-all duration-300 hover:shadow-2xl transform hover:scale-105 hover:-translate-y-1 border-2 border-transparent hover:border-charcoal"
    >
      <span class="text-lg">Ver Catálogo Completo</span>
      <svg class="w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </a>
  </div>

  <!-- Grid de productos destacados -->
  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
    {featuredProducts.map(product => (
      <div class="bg-ivory border-2 border-warm-gray-light rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl hover:border-gold transition-all duration-300 transform hover:scale-105">
        
        <!-- Imagen del producto -->
        <div class="aspect-square overflow-hidden relative">
          <img 
            src={product.image} 
            alt={product.name}
            class="w-full h-full object-cover hover:scale-110 transition-transform duration-300"
          />
          <!-- Badge de categoría -->
          <div class="absolute top-3 left-3">
            <span class="bg-gold text-charcoal text-xs font-semibold px-2 py-1 rounded-full shadow-md">
              {product.category}
            </span>
          </div>
        </div>
        
        <!-- Información del producto -->
        <div class="p-4 md:p-6">
          <h4 class="text-charcoal text-lg md:text-xl font-bold mb-2 line-clamp-2">
            {product.name}
          </h4>
          
          <p class="text-warm-gray-dark text-sm md:text-base mb-4 line-clamp-3 leading-relaxed">
            {product.description}
          </p>
          
          <!-- Precio -->
          <div class="flex items-center justify-between mb-4">
            <span class="text-charcoal text-xl md:text-2xl font-bold">
              {product.price}
            </span>
            <a 
              href={`/producto/${product.id}`}
              class="group text-gold hover:text-bronze text-sm font-semibold underline decoration-2 underline-offset-4 transition-all duration-200 hover:decoration-bronze flex items-center gap-1"
            >
              Ver detalles
              <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
          
          <!-- Botón de WhatsApp -->
          <a 
            href={`https://wa.me/${whatsappNumber}?text=${encodeURIComponent(product.whatsappMessage)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="group w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-all duration-300 hover:shadow-lg transform hover:scale-105 hover:-translate-y-1 flex items-center justify-center gap-2 border-2 border-transparent hover:border-green-300"
          >
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            <span class="text-base font-bold">Comprar por WhatsApp</span>
          </a>
        </div>
      </div>
    ))}
  </div>

  <!-- Llamada a la acción adicional -->
  <div class="text-center mt-12 p-8 bg-cream rounded-2xl border border-warm-gray-light">
    <h4 class="text-charcoal text-2xl font-bold mb-4">¿Buscas algo específico?</h4>
    <p class="text-warm-gray-dark text-lg mb-6 max-w-2xl mx-auto">
      Explora nuestro catálogo completo con más de 50 productos únicos organizados por categorías. 
      Cada pieza es una obra de arte única elaborada a mano.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
       <a 
         href="/marketplace" 
         class="group bg-gradient-to-r from-gold to-bronze hover:from-bronze hover:to-gold text-charcoal font-bold px-10 py-4 rounded-full shadow-xl transition-all duration-300 hover:shadow-2xl transform hover:scale-105 hover:-translate-y-1 border-2 border-transparent hover:border-charcoal flex items-center gap-3"
       >
         <span class="text-lg">Explorar Catálogo</span>
         <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
         </svg>
       </a>
       <a 
         href={`https://wa.me/${whatsappNumber}?text=${encodeURIComponent("Hola, me gustaría conocer más sobre sus productos de filigrana")}`}
         target="_blank"
         rel="noopener noreferrer"
         class="group bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold px-10 py-4 rounded-full shadow-xl transition-all duration-300 hover:shadow-2xl transform hover:scale-105 hover:-translate-y-1 border-2 border-transparent hover:border-green-300 flex items-center gap-3"
       >
         <svg class="w-6 h-6 transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
           <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
         </svg>
         <span class="text-lg">Consultar por WhatsApp</span>
       </a>
     </div>
  </div>
</section>