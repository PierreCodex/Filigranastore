  <script>
    // Funcionalidad de filtros
    document.addEventListener('DOMContentLoaded', function() {
      const categoryFilters = document.querySelectorAll('.category-filter');
      const productCards = document.querySelectorAll('.product-card');
      
      categoryFilters.forEach(filter => {
        filter.addEventListener('click', function() {
          const selectedCategory = this.getAttribute('data-category');
          
          // Actualizar estilos de filtros activos
          categoryFilters.forEach(f => {
            f.classList.remove('bg-gold', 'border-gold', 'text-charcoal');
            f.classList.add('bg-ivory', 'border-warm-gray-light', 'text-charcoal');
          });
          
          this.classList.remove('bg-ivory', 'border-warm-gray-light');
          this.classList.add('bg-gold', 'border-gold', 'text-charcoal');
          
          // Filtrar productos
          productCards.forEach(card => {
            const cardCategory = card.getAttribute('data-category');
            
            if (selectedCategory === 'Todos' || cardCategory === selectedCategory) {
              card.style.display = 'block';
              setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'scale(1)';
              }, 50);
            } else {
              card.style.opacity = '0';
              card.style.transform = 'scale(0.8)';
              setTimeout(() => {
                card.style.display = 'none';
              }, 300);
            }
          });
        });
      });
      
      // Activar filtro "Todos" por defecto
      document.querySelector('[data-category="Todos"]').click();
    });
  </script>
</Layout>